<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= user.firstName %>
            <%= user.lastName %>'s Portfolio
    </title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        section {
            margin: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        footer {
            margin-top: 20px;
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        /* Add more styles as needed */
    </style>
    <!-- Add your stylesheets or CDN links here -->
</head>

<body>
    <header>
        <h1>
            <%= user.firstName %>
                <%= user.lastName %>'s Portfolio
        </h1>
        <p>
            <%= user.bio %>
        </p>
    </header>

    <section>
        <h2>Contact Information</h2>
        <p>Email: <%= user.email %>
        </p>
        <p>Phone: <%= user.phone %>
        </p>
        <p>Address: <%= user.address %>
        </p>
    </section>

    <section>
        <h2>Social Media</h2>
        <ul>
            <% user.socialLinks?.forEach(socialLink=> { %>
                <li>
                    <%= socialLink.platform %>: <%= socialLink.link %>
                </li>
                <% }); %>
        </ul>
    </section>

    <section>
        <h2>Work Experience</h2>
        <ul>
            <% user.workExperience?.forEach(workExp=> { %>
                <li>
                    <p><strong>
                            <%= workExp.roleName %>
                        </strong> at <%= workExp.company %>
                    </p>
                    <p>
                        <%= workExp.startDate %> - <%= workExp.stillWorking ? 'Present' : workExp.endDate %>
                    </p>
                    <p>
                        <%= workExp.workDetails %>
                    </p>
                </li>
                <% }); %>
        </ul>
    </section>

    <section>
        <h2>Education</h2>
        <ul>
            <% user.education?.forEach(edu=> { %>
                <li>
                    <p><strong>
                            <%= edu.degree %>
                        </strong> at <%= edu.institution %>
                    </p>
                    <p>
                        <%= edu.startDate %> - <%= edu.stillStudying ? 'Present' : edu.endDate %>
                    </p>
                    <p>
                        <%= edu.description %>
                    </p>
                </li>
                <% }); %>
        </ul>
    </section>

    <!-- Add more sections for skills, projects, etc. -->

    <footer>
        <p>Skills: <%= user.skills %>
        </p>
        <p>Last Updated: <%= user.updatedOn %>
        </p>
    </footer>

    <!-- Add your scripts or CDN links here -->
</body>

</html>